{
  "name": "web",
  "description": "peeper",
  "engines": {
    "node": ">=15.0.0"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adaptors/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "wrangler pages dev ./dist",
    "dev": "NODE_OPTIONS=--experimental-vm-modules vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "qwik build && wrangler pages dev ./dist",
    "start": "vite --open --mode ssr",
    "qwik": "qwik",
    "upload": "qwik build && wrangler pages publish ./dist --project-name peeper"
  },
  "devDependencies": {
    "@builder.io/qwik": "0.16.2",
    "@builder.io/qwik-city": "0.1.0-beta9",
    "@cloudflare/workers-types": "^4.20221111.1",
    "@tailwindcss/typography": "^0.5.8",
    "@types/eslint": "8.4.10",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "autoprefixer": "^10.4.13",
    "cloudflare-access": "workspace:^1.0.0",
    "doit": "workspace:^1.0.0",
    "eslint": "8.31.0",
    "eslint-plugin-qwik": "0.16.2",
    "eslint-plugin-storybook": "^0.6.8",
    "miniflare": "^2.11.0",
    "node-fetch": "3.3.0",
    "npm-run-all": "^4.1.5",
    "peeper-crowd": "workspace:*",
    "peeper-post": "workspace:*",
    "peeper-settings": "workspace:*",
    "peeper-timeline": "workspace:*",
    "peeper-user": "workspace:*",
    "postcss": "^8.4.21",
    "prettier": "2.8.2",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwind-merge": "^1.8.1",
    "tailwindcss": "^3.2.4",
    "typescript": "4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-cloudflare": "^0.2.0",
    "vite-plugin-qwik-worker-proxy": "workspace:^1.0.0",
    "vite-tsconfig-paths": "^4.0.3",
    "web-streams-polyfill": "^3.2.1",
    "wrangler": "^2.7.0",
    "wtypes": "workspace:^1.0.0"
  }
}
